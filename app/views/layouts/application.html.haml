!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}
    %title= content_for(:page_title) || 'FunBoxTestApp'
    /= favicon_link_tag
    = csrf_meta_tags
    /= action_cable_meta_tag
    = stylesheet_link_tag    'application', 'data-turbolinks-track' => true, media: 'all', async: true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
  %body
    .container

      = render 'header'

      - flash.each do |key, value|
        %div{ class: "alert alert-dismissible alert-#{key == 'notice' ? 'success' : 'danger'}" }
          = value
          %button.close{ type: :button, 'data-dismiss': 'alert', 'aria-label': 'Close' }
            %span{ 'aria-hidden': 'true' } &times;

      .container
        = yield

      = render 'footer'
